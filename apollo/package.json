{
  "name": "bm-apollo",
  "version": "1.0.0",
  "description": "GraphQL API to retrieve data from mongodb",
  "main": "src/server.js",
  "repository": "https://github.com/papasmurf17/budget-manager.git",
  "author": "Matteo Codogno <matteo.codogno.90@gmail.ch>",
  "license": "MIT",
  "private": false,
  "files": [
    "src"
  ],
  "engines": {
    "node": "10.x"
  },
  "dependencies": {
    "apollo-server": "^2.4.0",
    "apollo-server-express": "^2.4.0",
    "casual": "^1.6.0",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "graphql-import": "^0.7.1",
    "graphql-tools": "^4.0.4",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.4.11"
  },
  "devDependencies": {
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-promise": "^4.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10"
  },
  "scripts": {
    "start": "DEBUG=bm node -r dotenv/config ./src/server.js",
    "start:prod": "DEBUG=bm node ./src/server.js",
    "start:dev": "DEBUG=bm nodemon -e js,graphql ./src/server.js",
    "start:mock": "DEBUG=bm NODE_ENV=mock nodemon ./src/server.js",
    "build": "yarn pack"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "test/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
